<odoo>
    <data>

        <record model="ir.ui.view" id="view_csrd_esrs_policy_form">
            <field name="name">view.csrd.esrs.policy.form</field>
            <field name="model">csrd.esrs</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="ai_question" />
                    </group>
                    <footer>
                        <button string="OK" type="object" name="create_ai_policy" class="oe_highlight"/>
                        <button string="Chancel" name="chancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.server" id="action_csrd_esrs_policy">
            <field name="name">Create Policy</field>
            <field name="model_id" ref="model_csrd_esrs"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "form",
                "views": [[env.ref("csrd_policy_support.view_csrd_esrs_policy_form").id,"form"]],
                "res_model": record._name,
                "res_id": record.id,
                "target": "new"
                }
            </field>
            <field name="binding_model_id" ref="model_csrd_esrs"/>
        </record>

    </data>
</odoo>